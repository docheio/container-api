NAME	= container-api
DEST	= /usr/local/bin
GO		= go

all: 		$(NAME)

$(NAME):;	$(GO) build -o $(NAME)

clean:;		rm -f $(NAME)

re: 		clean all

install: 	$(NAME)
			install -s $(NAME) $(DEST)
